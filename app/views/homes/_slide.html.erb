<div id="carouselExampleControls" class="carousel slide shadow-lg" data-ride="carousel">

  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag 'slide/slide1.png' %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'slide/slide2.png' %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'slide/slide3.png' %>
    </div>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev" style="background-color: gray;">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next" style="background-color: gray;">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>