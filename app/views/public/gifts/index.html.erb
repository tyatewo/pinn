<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-2 mx-1">
      <div class="my-2">
        <%= link_to "新規投稿", new_gift_path, class:"btn btn-outline-primary btn-block" %>
      </div>
      <div class="my-2">
        <%= render partial: "search" %>
      </div>
      <div class="my-2">
        <%= link_to "すべて表示する", gifts_path, class:"btn btn-outline-success btn-block" %>
      </div>
      <div class="my-2">
        <%= render 'scene_search', scenes: @scenes %>
      </div>
    </div>

    <div class="col-9">
      <h4></h4>
        <%= render "post", gifts: @gifts %>
    </div>
  </div>

  <div class="row my-5">
    <div class="mx-auto">
      <%= paginate @gifts, theme: 'twitter-bootstrap-4' %><%# ページネーション＠商品、テーマ：ツイッターブートストラップ %>
    </div>
  </div>


  <div class="col-12">
    <% if @tag_list.present? && @tag_list.count > 0 %>
      <% @tag_list.each do |list| %>
        <% if list.gifts.count > 0 %>
          <i class="fas fa-tag"></i>
          <%=link_to list.name, gifts_path(tag_id:list.id) %>
          <%="(#{list.gifts.count})" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
