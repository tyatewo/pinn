<div class="container">

  <div class="row">
    <div class="col-6">
      <% if @gift.gift_image.attached? %>
        <%= image_tag @gift.gift_image, size: "300x300" %>
      <% else %>
        <%= image_tag "about.png", size: "300x300" %>
      <% end %>
      <!--商品の商品画像-->
    </div>
    <div class="col-6">
      <div class="form-group">
        <lavel for="inputName">商品名</lavel>
        <div class="content-section">
          <h3><strong><%= @gift.name %></strong></h3>
        </div>
      </div>

      <div class="form-group">
        <lavel for="inputName">店舗名</lavel>
        <div class="content-section">
           <h5 class="mt-3"><strong><%= @gift.shop_name %></strong></h5>
        </div>
      </div>

      <div class="form-group">
        <lavel for="inputName">料金</lavel>
        <div class="content-section">
          <h4><strong>¥<%= number_with_delimiter((@gift.price), delimiter: ',') %></strong><small class="text-small">（税込）</small></h4>
        </div>
      </div>

      <div class="form-group">
        <lavel for="inputName">利用シーン</lavel>
          <div class="content-section">
          <h6 class="mt-3"><strong><%= @gift.scene.name %></strong></h6>
        </div>
      </div>

      <h6 class="mt-3">
        <% @tag_list.each do |list| %>
          <i class="fas fa-tag"></i>
          <%=list.name %>
          <%="(#{list.gifts.count})" %>
        <% end %>
      </h6>

      <div id= "bookmark-<%= @gift.id %>">
        <%= render 'bookmark', gift: @gift %>
      </div>

    </div>
  </div>

  <div class = "row">
    <h2>利用した感想</h2>
  </div>
  <div class = "row">
    <%= @gift.introduction %>
  </div>

  <div class = "row">
    <%# if @gift.customer_id == current_customer %>
      <%= link_to "編集", edit_gift_path(@gift.id), class: "btn btn-outline-success" %>
      <%= link_to "削除", gift_path(@gift.id), method: :delete, "data-confirm"=> "本当に消しますか？", class:"btn btn-outline-danger" %>
    <%# end %>
  </div>

  <div class = "row">
    <%= render 'comment', comments: @comments, comment: @comment, gift: @gift %>

</div>
