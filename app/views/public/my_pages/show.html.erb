<h1>マイページ</h1>

<div class= "container px-5 px-sm-0">


  <div class= "row">

    <div class= "col-md-4">
      <table class= "table">
        <tr><%= image_tag customer.get_profile_image(300,300) %></tr>
      </table>
    </div>


    <div class= "col-md-7 offset-md-1">
      <table class= "table">
        <tbody>
          <tr></tr>
            <tr>
              <th><%= customer.name %></th>
            </tr>
            <tr>
              <th><%= customer.profile %></th>
            </tr>

            <% if customer.name != "guestuser" %>
              <%= link_to '',edit_customer_path(customer),class: "btn btn-outline-Danger btn-block  edit_user_#{customer.id}" %>
            <% end %>
        </tbody>
      </table>
    </div>

  </div>


  <div class= "row">
    <h2>シェアした贈り物</h2>

      <table class="table table-hover table-inverse">

        <thead>

          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan= "3"></th>
          </tr>

        </thead>

        <tbody>

          <% @gifts.each do |gift| %>
            <tr>
              <td><%= link_to customer_path(gift.customer.id) do %>
                    <%= image_tag gift.customer.get_profile_image(100,100) %>
                  <% end %>
              </td>
              <td><%= link_to gift.title, gift_path(gift.id) %></td>
              <td><%= gift.shop_name %></td>
            </tr>
          <% end %>

        </tbody>

      </table>
  </div>







