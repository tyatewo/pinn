<div class="container">
  <h3>シーン一覧・追加</h3>

  <%= form_with model: [:admin, @scene] do |f| %>
    <p>シーン名
    <%= f.text_field :name, placeholder: "シーン名" %>
    <%= f.submit "新規登録",class: 'btn btn-success' %>
    </p>
  <% end %>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">シーン</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @scenes.each do |scene| %>
        <tr>
          <td><%= scene.name %></td>
          <td><%= link_to "編集する", edit_admin_scene_path(scene.id), class: 'btn btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>