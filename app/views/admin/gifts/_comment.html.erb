<table>
  <thead><h2>コメント</h2></thead>
    <tbody>
      <% gift.comments.each do |comment| %>
        <tr>
          <td>
            <%= image_tag comment.customer.profile_image, size:"100x100" %><br>
              <%= comment.customer.name %>
          </td>

          <td><%= comment.body %></td>

          <td><%= link_to "Destroy", admin_gift_comment_path(gift, comment), method: :delete, class: "btn btn-sm btn-danger", remote: true %></td>

        </tr>
      <% end %>
    </tbody>
</table>