<div class= "container px-5 px-sm-0">
  <div class= "row">
    <div class= "col-md-4">
      <table class= "table">
        <tr>
        <% if @customer.profile_image.attached? %>
          <%= image_tag @customer.profile_image, size: "300x300" %>
        <% else %>
          <%= image_tag 'no_image.png', size: "300x300" %>
        <% end %>
        </tr>
      </table>
    </div>


    <div class= "col-md-7 offset-md-1">
      <div class="col-6">
        <div class="form-group">
          <lavel for="inputName">ユーザーネーム</lavel>
          <div class="content-section">
            <h3><strong><%= @customer.name %></strong></h3>
          </div>
        </div>

        <div class="form-group">
          <lavel for="inputName">プロフィール</lavel>
          <div class="content-section">
            <h5><strong><%= @customer.profile %></strong></h5>
          </div>
        </div>

        <%#= link_to "ユーザーを退会させる", admin_customer_withdrawal_path, class: 'btn btn-success' %>
        <%= link_to "退会させる", admin_customer_withdrawal_path(@customer.id), method: :patch, class: 'btn btn-danger' %>

        <%# if customer.name != "guestuser" %>
        <%#= link_to '',edit_customer_path(customer),class: "btn btn-outline-Danger btn-block  edit_user_#{customer.id}" %>
        <%# end %>
      </div>
    </div>



    <div class="col-10">
      <h2>シェアした贈り物</h2>
        <% if @gifts.empty? %>
          <p>まだシェアしていません。</p>
        <% else %>
            <% @gifts.each do |gift| %>
              <div class="col-3 border p-3 text-center">
                <%= link_to admin_gift_path(gift.id) do %><%# その商品の詳細ページ %>
                  <% if gift.gift_image.attached? %>
                    <%= image_tag gift.gift_image, size: "175x175" %> <%# 商品の商品画像 %>
                  <% else %>
                    <%= image_tag "about.png", size: "175x175" %>
                  <% end %>
                <% end %>
                  <p class="text-body"><%= gift.name %></p><%# 商品の名前 %>
                  <p class="text-body"><%= gift.shop_name %></p><%# 店舗の名前 %>
                  <div id="bookmark-<%= gift.id %>">
                    <%= render "public/gifts/bookmark", gift: gift %>
                  </div>
              </div>
            <% end %>
        <% end %>
      </div>
   </div>
</div>








